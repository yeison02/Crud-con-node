<%- include("layout/header") %>

    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto mt-4">
                <div class="card shadow">
                    <div class="card-header bg-primary">
                        <h3 class="text-light">AÃ±adir Producto</h3>
                    </div>
                    <div class="card-body p-4">
                        <form action="/add" method="post" id="add-form" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="name">Nombre</label>
                                <input type="text" name="name" class="form-control form-control-lg fs-6"
                                    placeholder="Nombre del producto" required>
                            </div>
                            <div class="mb-3">
                                <label for="cantAnt">CantDayAnt</label>
                                <input type="number" name="cantAnt" class="form-control form-control-lg fs-6"
                                    placeholder="0" required>
                            </div>
                            <div class="mb-3">
                                <label for="cantEnt">CantDayEnt</label>
                                <input type="number" name="cantEnt" class="form-control form-control-lg fs-6"
                                    placeholder="0" required>
                            </div>
                            <div class="mb-3">
                                <label for="cantFinal">CantDayFinal</label>
                                <input type="number" name="cantFinal" class="form-control form-control-lg fs-6"
                                    placeholder="0" required>
                            </div>
                            <div class="mb-3">
                                <label for="image" class="form-label">Select image</label>
                                <input type="file" name="image" class="form-control form-control-lg" required>
                            </div>
                            <div class="mb-3 d-grid">
                                <input type="submit" name="submit" value="Add product" class="btn btn-primary btn-lg">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include("layout/footer") %>