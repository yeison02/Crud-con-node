<%- include("layout/header") %>

  <div class="container ">
    <div class="row my-4">
      <div class="col-lg-12">
        <% if(message) { %>
          <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
            <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
            <strong>
              <%= message.message %>
            </strong>
          </div>
          <% } %>
            <div class="table-respinsive ">
              <% if(products !="" ) { %>
                <table class="table table-striped text-center">
                  <thead>
                    <tr class="table-dark ">
                      <th>ID</th>
                      <th>Image</th>
                      <th>Name product</th>
                      <th>CantAnt</th>
                      <th>CantEnt</th>
                      <th>CantFinal</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% products.forEach((row, index)=> { %>
                      <tr>
                        <td>
                          <%= index %>
                        </td>
                        <td><img src=" <%=row.img%>" width="50" class="img-thumbnail"></td>
                        <td>
                          <%= row.name %>
                        </td>
                        <td class="">
                          <%= row.cantDayAnt %>
                        </td>
                        <td>
                          <%= row.cantDayEnt %>
                        </td>
                        <td>
                          <%= row.cantDayFinal %>
                        </td>
                        <td>
                          <!--Btn para editar  -->
                          <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                          <!-- Btn para eliminar -->
                          <a href="/delete/<%= row._id %>" class="text-danger"><i
                              class="fas fa-trash fa-lg mx-1"></i></a>
                        </td>
                      </tr>
                      <% }) %>
                  </tbody>
                </table>
                <% } else { %>
                  <h1 class="text-center text-secondary mt-5">!No se encontrarón productos en la base de datos¡</h1>
                  <% }%>

            </div>
      </div>
    </div>
  </div>

  <%- include("layout/footer") %>